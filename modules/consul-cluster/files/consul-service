[Unit]
Description=Consul
Documentation=https://www.consul.io/

[Service]
PIDFile=/run/consul/consul.pid
Restart=on-failure
ExecStart=/usr/local/bin/consul agent -config-dir=/opt/consul/config/ -pid-file=/run/consul/consul.pid
ExecReload=/bin/kill -s HUP $MAINPID
KillSignal=SIGINT
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target